<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="205dp"
                  android:layout_height="329dp"
                  android:layout_weight="0.89">

        <AutoCompleteTextView
            android:id="@+id/searchTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Search..."
            android:imeOptions="actionDone"
            android:focusableInTouchMode="true"/>

        <ListView
            android:id="@+id/currentFoodsListView"
            android:layout_width="202dp"
            android:layout_height="415dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="113dp"
        android:layout_height="415dp">

        <Button
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Add custom food"
            android:id="@+id/addCustomFoodButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:id="@+id/totalCaloriesTextView"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="88dp"
            android:layout_alignRight="@+id/addCustomFoodButton"
            android:layout_alignEnd="@+id/addCustomFoodButton"/>
    </RelativeLayout>

</LinearLayout>